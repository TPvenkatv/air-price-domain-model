<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.6.3</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>
	<groupId>com.travelport.air.domain.model</groupId>
	<artifactId>air-price-domain-model</artifactId>
	<version>11.4.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>air-price-domain-model</name>
	<description>Air price domain model jar generated from Offers swagger</description>
	<properties>
		<train>ts</train>
		<functionality>airpricedomainmodel</functionality>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.8</java.version>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<swagger.generated.source.package>com.travelport.air.price.domain</swagger.generated.source.package>
	</properties>

	<repositories>
		<repository>
			<id>releases</id>
			<name>Releases</name>
			<url>http://maven-repo2.tvlport.com:8082/repository/releases/</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>io.swagger.core.v3</groupId>
			<artifactId>swagger-annotations</artifactId>
			<version>2.1.12</version>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-validation</artifactId>
			<version>2.6.3</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-annotations</artifactId>
			<version>2.13.1</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>io.swagger.codegen.v3</groupId>
				<artifactId>swagger-codegen-maven-plugin</artifactId>
				<version>3.0.25</version>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<configurationFile>${project.basedir}/src/main/resources/SwaggerGeneratorConfig.json</configurationFile>
							<inputSpec>${project.basedir}/src/main/resources/swagger/JSONAPIAir-offer-resource-AirPrice_11.4.0-oas3-resolved.yaml</inputSpec>
							<output>${project.build.directory}/generated-sources/</output>
							<language>spring</language>
							<library>spring-boot</library>
							<modelPackage>${swagger.generated.source.package}.model</modelPackage>
							<generateModelDocumentation>true</generateModelDocumentation>
							<generateModels>true</generateModels>
							<generateApis>false</generateApis>
							<generateSupportingFiles>false</generateSupportingFiles>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<distributionManagement>
		<repository>
			<id>tvlprt.nexus.repo.releases</id>
			<name>Travelport Nexus Release Repository</name>
			<url>${tvlprt.nexus.repository.url}/releases/</url>
		</repository>
		<snapshotRepository>
			<id>tvlprt.nexus.repo.snapshots</id>
			<name>Travelport Nexus Snapshot Repository</name>
			<url>${tvlprt.nexus.repository.url}/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>
	<scm>
		<connection>scm:git:https://github.com/Travelport-Enterprise/air-price-domain-model.git</connection>
		<developerConnection>scm:git:https://github.com/Travelport-Enterprise/air-price-domain-model.git</developerConnection>
	</scm>

</project>
